       cflags += [ "-fwrapv" ]
     }
 
+    if (is_clang) {
+      cflags += [ "-ftrivial-auto-var-init=zero", "-enable-trivial-auto-var-init-zero-knowing-it-will-be-removed-from-clang" ]
