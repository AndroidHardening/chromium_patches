-            mPasswordLeakDetection.setManagedPreferenceDelegate(mManagedPreferenceDelegate);
+            //mPasswordLeakDetection.setOnPreferenceChangeListener(this);
+            //mPasswordLeakDetection.setManagedPreferenceDelegate(mManagedPreferenceDelegate);
